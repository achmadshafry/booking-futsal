<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".View.DetailObat">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/imgDetail"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:padding="12dp"
            android:src="@mipmap/ic_launcher"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/namaDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textStyle="bold"
                    android:textColor="@color/colorHitam"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/kodeDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kode"
                    android:textColor="@color/colorHitam"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/hargaDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:text="harga"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textColor="@color/colorHitam"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/jmlDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lama booking"
                android:textColor="@color/colorHitam"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/satuanDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jam Booking"
                android:textColor="@color/colorHitam"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/expiredDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="expired"
                android:textColor="@color/colorHitam"
                android:textSize="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>