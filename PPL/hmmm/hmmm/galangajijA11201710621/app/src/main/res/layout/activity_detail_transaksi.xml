<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".View.DetailTransaksi">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imgDetailT"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:padding="12dp"
                    android:src="@mipmap/ic_launcher"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/namaDetailT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama"
                            android:textStyle="bold"
                            android:textColor="@color/colorHitam"
                            android:textSize="24dp" />

                        <TextView
                            android:id="@+id/kodeDetailT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="kode"
                            android:textColor="@color/colorHitam"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/hargaDetailT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:gravity="end"
                        android:text="harga"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:textColor="@color/colorHitam"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/jmlDetailT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="lama booking"
                        android:textColor="@color/colorHitam"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/satuanDetailT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jam Booking"
                        android:textColor="@color/colorHitam"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/expiredDetailT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="expired"
                        android:textColor="@color/colorHitam"
                        android:textSize="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/number_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    app:finalNumber="10"
                    app:initialNumber="1">
                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnBatal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/rect_grayoutline"
                    android:text="Batal"/>
                <Button
                    android:id="@+id/btnJual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorPutih"
                    android:background="@drawable/gradient"
                    android:text="Bayar"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>